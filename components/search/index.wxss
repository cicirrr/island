/* components/search/index.wxss */
.container{
  background-color: #fff;
}
.header{
  padding: 18rpx 26rpx;
  display: flex;
  align-items: center;
  
}
.input-box{
  position: relative;
}
.icon-search{
  width: 28rpx;
  height: 30rpx;
  position: absolute;
  top: 21rpx;
  left: 26rpx;
}
.icon-cancel{
  width: 35rpx;
  height: 35rpx;
  padding: 10rpx;
  position: absolute;
  top: 6rpx;
  right: 20rpx;
  z-index: 999;
}
.input{
  width: 476rpx;
  height: 66rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  line-height: 66rpx;
  padding-left: 60rpx;
  font-size: 30rpx;
  color: #878787;
}
.cancel{
  font-size: 32rpx;
  color: #4a4a4a;
  padding: 20rpx 30rpx;
  border: 1px solid #9e9e9e;
  border-radius: 48rpx;
  margin-left: 30rpx;
}
.sub{
  border-top: 1px solid #eaeaea;
}
.sub-box{
  padding: 30rpx 26rpx;
}
.sub-title{
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.line{
  width: 8rpx;
  height: 30rpx;
  background-color: #000;
  margin-right: 22rpx;
}
.title{
  font-size: 30rpx;
}
.sub-tags{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;

}
.sub-tags .tag{
  margin: 0 20rpx 20rpx 0;
}
.result{
  padding: 10rpx 60rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.result .book{
  margin-bottom: 40rpx;
}
.loading-center{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.loading{
  position: fixed;
  left: 50%;
  bottom: 10rpx;
  transform: translateX(-50%);
}
.no-result{
  font-size: 32rpx;
  display: block;
  text-align: center;
  padding: 20rpx 0;
}