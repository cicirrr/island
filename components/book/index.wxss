/* components/book/book.wxss */
.container{
  width: 240rpx;
  /* position: relative; */
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 3px 2px rgba(0,0,0,.1);
}
.cover{
  width: 100%;
  height: 300rpx;
}
.upper{
  background-color: #fff;
  padding: 20rpx;
  /* position: absolute; */
  /* transform: translateY(-60rpx); */
  margin-top: -60rpx;
  display: flex;
  flex-direction: column;
}
.title{
  color: #181818;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.author{
  color: #999;
  font-size: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.like{
  /* display: block; */
  color: #b3b3b3;
  font-size: 20rpx;
  padding-bottom:20rpx;
  background-color: #fff;
  
}